<body>
<div class="container">
    <h2>Buscador de E-mails</h2>

    <input type="text" id="nome" placeholder="Digite um nome ou instituição">
    <button onclick="buscarEmail()">Buscar</button>

    <div id="resultado" style="margin-top: 20px;"></div>
</div>

<script>
const emails = {
"99": "juridico@99app.com",
"aeronautica": "protocolo.dirap@fab.mil.br",
"aerus": "juridico@aerus.com.br",
"apresentação pm audiencia": "cgpm.apresentacao@gmail.com",
"assistencia social": "protocolo.smas@prefeitura.rio",
"atento": "juridico.oficios@atento.com",
"auxilio emergencial": "documentacaosenarc@cidadania.gov",
"banco bradesco": "ofíciosjudicias@bradesco.com.br",
"banco c6": "faleconosco@c6bank.com.br",
"banco central": "admin.ecm.deinf@bcb.gov.br",
"banco do brasil": "cenopserv.oficioscwb@bb.com.br",
"banco do nordeste": "relacionamento@bnb.gov.br",
"banco pan": "atendimento@grupopan.com.br"
};

// Normaliza texto (remove acentos e deixa minúsculo)
function normalizeText(str) {
    if (!str) return "";
    return str.toString().toLowerCase().normalize("NFD").replace(/\p{Diacritic}/gu, "");
}

function buscarEmail() {
    const nomeRaw = document.getElementById("nome").value || "";
    const termo = normalizeText(nomeRaw.trim());
    const resultadoDiv = document.getElementById("resultado");

    if (!termo) {
        resultadoDiv.innerHTML = "Por favor, digite um nome ou e-mail para buscar.";
        return;
    }

    const resultados = [];

    for (const chave in emails) {
        const chaveNorm = normalizeText(chave);
        const emailNorm = normalizeText(emails[chave]);

        if (chaveNorm.includes(termo) || emailNorm.includes(termo)) {
            resultados.push({ chave, email: emails[chave] });
        }
    }

    if (resultados.length === 0) {
        resultadoDiv.innerHTML = "Nenhum resultado encontrado.";
        return;
    }

    resultadoDiv.innerHTML = resultados.map(r => `
        <div class="resultado-item">
            <strong>${escapeHtml(r.chave)}</strong>: 
            <span>${escapeHtml(r.email)}</span>
        </div>
    `).join("<hr>");
}

// Evita injeção HTML
function escapeHtml(text) {
    return String(text)
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;")
        .replace(/\"/g, "&quot;")
        .replace(/'/g, "&#039;");
}
</script>
